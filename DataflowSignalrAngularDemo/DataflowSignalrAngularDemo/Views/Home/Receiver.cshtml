@{
    ViewBag.Title = "Receiver";
}

<h3>Real-time FileWatcher System Monitor using TPL DataFlow , Asp.NET Web API, SignalR, ASP.net MVC and AngularJS</h3>
<p>This view subscribes to the monitorHub</p>
<div data-ng-controller="monitorCtrl as wdgt">
    <ul>
        <li data-ng-repeat="monitor in monitors">
            ID {{monitor.ID}}: {{monitor.Color}} {{monitor.Shape}}
        </li>
    </ul>

    <span>Processor</span>

    <ul>
        <li ng-repeat="monitor in Processor"
            ng-class="{'over-thirty' : monitor.Name=='ReceiverA'}">
            Name : {{monitor.Name}} Value: {{monitor.Value}}
        </li>
    </ul>

    <span>FileOrderEntities</span>

    <ul>
        <li data-ng-repeat="monitor in FileOrderEntities">
            <span>
                {{monitor.FileName}} : {{monitor.Extension}}
            </span>
        </li>
    </ul>
</div>

@section Scripts {
    <!-- Reference the autogenerated SignalR hub script -->
    <script src="~/signalr/hubs"></script>
}